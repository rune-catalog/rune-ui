{
  "name": "rune-ui",
  "version": "0.1.0",
  "description": "An app for organizing your magic cards",
  "main": "index.js",
  "repository": "rune-catalog/rune-ui",
  "scripts": {
    "postinstall": "typings install",
    "start": "tsc && node-sass styles/rune.scss styles.css && concurrently \"npm run tsc:w\" \"npm run lite\" \"npm run sass:w\"",
    "prepublish": "npm run ngc && npm run rollup",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typings": "typings",
    "lite": "lite-server",
    "sass:w": "node-sass -w styles/rune.scss styles.css",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "ngc": "ngc -p tsconfig-aot.json",
    "rollup": "rollup -c rollup.js",
    "svg": "rm -f static/img/sprites.svg && svg-sprite --symbol --symbol-dest=static/img --ss sprites.svg static/img/*.svg"
  },
  "author": "Sam Noedel <sam.noedel@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "@angular/common": "^2.0.1",
    "@angular/compiler": "^2.0.1",
    "@angular/core": "^2.0.1",
    "@angular/platform-browser": "^2.0.1",
    "@angular/platform-browser-dynamic": "^2.0.1",
    "core-js": "^2.4.1",
    "flux-lite": "^0.6.0",
    "ramda": "^0.22.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-beta.11",
    "systemjs": "^0.19.38",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^0.6.3",
    "@angular/platform-server": "^2.0.1",
    "concurrently": "^3.1.0",
    "lite-server": "^2.2.2",
    "node-sass": "^3.10.0",
    "rollup": "^0.36.0",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "svg-sprite": "^1.3.6",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  }
}
