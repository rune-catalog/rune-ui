{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "debug",
    "pretty": true,
    "target": "es5",
    "typeRoots" : [ "node_modules/@types" ]
  },
  "exclude": [
    "node_modules/",
    "app/main-aot.ts"
  ]
}
